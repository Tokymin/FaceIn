<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_coordinator_toolbar_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arcsoft.sdk_demo.Activity.UpdateInforActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:id="@+id/main.backdrop"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bgm"
                android:clickable="true"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:layout_collapseMode="pin"
                >

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_marginLeft="130dp"
                android:id="@+id/toux"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/headm"/>
            <View
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_above="@+id/radioGroup"
                android:background="#bfbfbf" />
            <TextView
                android:id="@+id/nichen"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:clickable="true"
                android:text="@string/username"/>
            <View
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="0.4dp"
                android:layout_above="@+id/radioGroup"
                android:background="#bfbfbf" />
            <TextView
                android:id="@+id/number"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:text="234564"/>
            <View
                android:id="@+id/line3"
                android:layout_width="wrap_content"
                android:layout_height="0.4dp"
                android:layout_above="@+id/radioGroup"
                android:background="#bfbfbf" />


            <EditText
                android:id="@+id/qianm"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:hint="@string/qianm"/>


            <View
                android:id="@+id/line4"
                android:layout_width="wrap_content"
                android:layout_height="0.4dp"
                android:layout_above="@+id/radioGroup"
                android:background="#bfbfbf" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:clickable="true"
                        android:text="性别"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@+id/sex"
                        />
                    <TextView
                        android:clickable="true"
                        android:text="女"
                        android:id="@+id/sex2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@+id/sex"
                        />
                </LinearLayout>


            <View

                android:layout_width="wrap_content"
                android:layout_height="0.4dp"
                android:layout_above="@+id/radioGroup"
                android:background="#bfbfbf" />
            <TextView
                android:id="@+id/birthday"
                android:gravity="center"
                android:textSize="20dp"
                android:text="1998年8月24日"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                />
            <View
                android:id="@+id/line5"
                android:layout_width="wrap_content"
                android:layout_height="0.4dp"
                android:layout_above="@+id/radioGroup"
                android:background="#bfbfbf" />
            <TextView
                android:id="@+id/more"
                android:gravity="center"
                android:textSize="20dp"
                android:text="更多信息"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                />
            <View
                android:id="@+id/line7"
                android:layout_width="wrap_content"
                android:layout_height="0.4dp"
                android:layout_above="@+id/radioGroup"
                android:background="#bfbfbf" />
            <TextView
                android:id="@+id/吗"
                android:gravity="center"
                android:textSize="20dp"
                android:text="个人说明"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                />
            <View
                android:id="@+id/line6"
                android:layout_width="wrap_content"
                android:layout_height="0.4dp"
                android:layout_above="@+id/radioGroup"
                android:background="#bfbfbf" />

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/back"
                   android:text="保存"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/guide_btn_blue_selector"/>
               <Button
                   android:id="@+id/calcell"
                   android:text="取消"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/guide_btn_blue_selector"/>
           </LinearLayout>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
